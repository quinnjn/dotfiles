[alias]
	co = checkout
	st = status
	today = !git log --since=midnight --author=$(git config user.name) --oneline

[push]
	default = current

[pull]
	rebase = true

[commit]
	gpgSign = true
	verbose = true

[gpg]
	program = gpg

[includeIf "gitdir:~/work/"]
	path=~/.gitconfig.work

[includeIf "gitdir:~/git/github.com/quinnjn/"]
	path=~/.gitconfig.personal
[core]
	excludesfile = ~/.gitignore
